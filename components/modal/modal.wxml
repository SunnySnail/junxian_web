<!--components/modal/modal.wxml-->
<view class="modal-wrap" hidden="{{hidden}}">
    <view class="modal-con">
        <view class="modal-header">{{modalTitle}}</view>
        <view class="modal-body">
            <view class="modal-input-body" slot="modalBody">
                <text>进入对话后请发送“1”，会得到自动记账方法。</text>
            </view>
        </view>
        <view class="modal-footer">
            <button class="modal-footer-btn" slot="modalFooter" bindtap="hideKefu" open-type="contact" session-from="{{from}}">进入对话</button>
        </view>
    </view>
</view>
